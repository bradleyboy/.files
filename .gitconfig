[user]
	name = Genadi Samokovarov
	email = gsamokovarov@gmail.com

[alias]
	branches = branch -l
	tags = tag -l
	remotes = remote
	master = checkout master
	sprout = checkout -b
	switch = checkout
	unstash = stash pop
	forget = checkout -f
	choose = !git checkout $(zenity --list --column Branches `git branch --list | cut -d ' ' -f 3 | xargs echo`)

[core]
	filemode = true
	logallrefupdates = true
	whitespace = space-before-tab, trailing-space

[color]
	ui = auto

[branch]
	autosetupmerge = true

[diff]
	renames = copies
	mnemonicprefix = true

[push]
	default = current

[hub]
	protocol = ssh

[browser "gitscm"]
	cmd = sh -c 'gnome-open http://git-scm.com/docs/$(basename $1 .html)' --
