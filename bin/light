#!/usr/bin/env bash

PROFILE=/apps/gnome-terminal/profiles/${PROFILE:-Default}

BG_COLOR='#fdfdf6f6e3e3'
FG_COLOR='#65657b7b8383'
BD_COLOR='#58586e6e7575'
PALETTE='#070736364242:#DCDC32322F2F:#858599990000:#B5B589890000:#26268B8BD2D2:#D3D336368282:#2A2AA1A19898:#EEEEE8E8D5D5:#00002B2B3636:#CBCB4B4B1616:#58586E6E7575:#65657B7B8383:#838394949696:#6C6C7171C4C4:#9393A1A1A1A1:#FDFDF6F6E3E3'

# Set the color palette.
gconftool-2 -s -t string $PROFILE/palette             $PALETTE

# Set the foreground, background and highlight colors.
gconftool-2 -s -t string $PROFILE/bold_color          $BD_COLOR
gconftool-2 -s -t string $PROFILE/background_color    $BG_COLOR
gconftool-2 -s -t string $PROFILE/foreground_color    $FG_COLOR

# Make sure the profile is set to not use theme colors.
gconftool-2 -s -t bool $PROFILE/use_theme_colors      false

# Set the highlighted color to be different from foreground color.
gconftool-2 -s -t bool $PROFILE/bold_color_same_as_fg false
